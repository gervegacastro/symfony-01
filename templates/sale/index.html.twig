{% extends 'base.html.twig' %}

{% block title %}Index Sales{% endblock %}

{% block body %}

    <div class="text-center mt-4">
        <h1>Bienvenid@</h1>
    </div>
    
    <h2>Lista de Ventas</h2>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>NUM VENTA</th>
                    <th>FECHA</th>
                    <th>ID CLIENTE</th>
                    <th>NOMBRE Y APELLIDO</th>                                        
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                {% for dato in datos %}
                <tr>
                    <td>{{dato.id}}</td>
                    <td>{{dato.date|date('Y-m-d')}}</td>
                    <td>{{dato.client.id}}</td>
                    <td>{{dato.client.name}} {{dato.client.lastname}}</td>
                    <td>
                        <a href="{{ path ('sale_edit', {id: dato.id}) }}" class="btn btn-success btn-sm">
                        <i class="bi bi-pen-fill"></i> Edit</a>
                        <a href="{{ path ('sale_detail', {id : dato.id}) }}" class="btn btn-secondary btn-sm">
                        <i class="bi bi-pen-fill"></i> Detalle</a>
                        <button value="{{ path('sale_delete', {id : dato.id} )}}" class="btn btn-danger btn-sm btn-delete" id="{{ dato.id }}">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </button>                                               
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>   
    <div class="mt-3">
        <button class="btn btn-primary">
            <a class="nav-link white" href="{{ path ('sale_create') }}">Crear Venta</a>
        </button>
    </div>

    {# Modal #}
    {% include 'modals/modal_deleted.html.twig' %} 

    {# JavaScript #}
    {% block javascript %}
        <script src="{{ asset('js/base.js') }}"></script>
    {% endblock %}


{% endblock %}
