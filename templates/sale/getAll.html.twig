{% extends 'base.html.twig' %}

{% block title %}Index Sales{% endblock %}

{% block body %}

    <div class="text-center mt-4">
        <h1>Bienvenid@</h1>
    </div>
    
    <h2>Lista de Ventas</h2>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>NUM VENTA</th>
                    <th>ID CLIENTE</th>
                    <th>NOMBRE Y APELLIDO</th>
                    <th>ACTIVO</th>                                        
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                {% for dato in datos %}
                <tr>
                    <td>{{dato.id}}</td>
                    <td>{{dato.client.id}}</td>
                    <td>{{dato.client.name}} . {{dato.client.lastname}}</td>
                    <td>{{dato.isDelete ? 'NO' : 'SI' }}</td>
                    <td>
                        <a href="{{ path ('sale_edit', {id: dato.id}) }}" class="btn btn-success btn-sm">
                        <i class="bi bi-pen-fill"></i> Edit</a>
                        <a href="{{ path ('sale_deletedb', {id: dato.id}) }}" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash3-fill"></i> Delete db</a>                        
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>   
    <div class="mt-3">
        <button class="btn btn-primary">
            <a class="nav-link white" href="{{ path ('sale_create') }}">Crear Venta</a>
        </button>
    </div>


{% endblock %}