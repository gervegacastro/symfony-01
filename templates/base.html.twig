<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Curso Symfony - {% block title %} {% endblock %}</title>
   
    <!-- Link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
                rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
                crossorigin="anonymous">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset ('css/base.css') }}">       
    {% endblock %}

</head>
<body>
    {% if app.user %}
    <!-- Navbar -->
    <nav class="container navbar navbar-expand-lg bg-primary">            
        <div class="container-fluid">
            <a class="navbar-brand white" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">                  
                    {% if is_granted('IS_AUTHENTICATED_FULLY')==false %}
                    <li class="nav-item">
                        <a class="nav-link white" href="{{ path ('user_login')}}">Login</a>
                    </li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link white" href="{{ path ('user_index') }}">Usuarios</a>
                    </li>                    
                    <li>
                        <a class="nav-link white" href="{{ path ('category_index') }}">Categorias</a>
                    </li>
                    <li>
                        <a class="nav-link white" href="{{ path ('product_index') }}">Productos</a>
                    </li>
                    <li>
                        <a class="nav-link white" href="{{ path ('sale_index') }}">Ventas</a>
                    </li>                    
                    <li class="nav-item">
                        <a class="nav-link white" href="{{ path ('user_logout') }}">Logout</a>
                    </li>
                    {% endif %}                        
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    {% endif %}
    
    <section class="container body">
        {% block body %}{% endblock %}
    </section>


    
    {% if app.user %}
    <!-- Footer -->
    <section id="contactos" class="container bg-primary footer ">
        <div class="text-center">
            Symfony24
        </div>           
    </section>
    <!-- End Footer -->
    {% endif %}

    {% block javascript %}{% endblock %}

</body>
</html>

