{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="d-flex justify-content-center align-items-center vh-100">
    <section class="form-login">
        <div class="p-3 text-center">
            <h1>Login</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
        <div class="p-3">
            <form class="form" action="{{ path('user_login') }}" method="post">
                <div class="">
                    <label class="form-control label mb-1" for="username">Email</label>
                    <input class="input" type="text" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="mt-2">
                    <label class="form-control label mb-1" for="password">Password</label>
                    <input class="input" type="password" id="password" name="_password">
                </div>
                {# If you want to control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/user/index">
                <!-- Token --> 
                <input type="hidden" name="token" value="{{csrf_token('generico')}}"> 
                       
                <div class="mt-3 d-flex justify-content-center">
                    <button class="btn btn-outline-dark" type="submit">login</button>
                </div>
            </form>    
        </div>
    </section>
</div>
    
    
{% endblock %}